<?xml version="1.0"?>
<dialog title="Propriedades do VA" >
    <property id="hash" value="" ></property>
	<property id="sidebuttons" value="" ></property>
	<property id="version" value="" ></property>
	
	<flash id="flash" width="520" height="60" src="logo.swf"  
			/>
	<spacer/>
	<separator></separator>
	
	<grid>
		
		<columns>
			<column  />
			<column  />
		</columns>
		
		<rows>
			
			<row>
				<label value="Identificador (hash):" />
				<textbox id="txtHash" size="36" placeholder="-------" />
			</row>
			<row>
				<label value="Versão" />
				<textbox id="txtVersao" size="8" />
			</row>
			
		</rows>
	</grid>
	<vbox>
		<label  value="Navegar utilizando as bordas?" />
		<radiogroup class="control" id="radiogroup" tabindex="" >
				<hbox>
					<radio label="Não" selected="true" value="none" acceskey="" />
					<radio label="Bordas Superiores"  value="top" acceskey="" />
					<radio label="Bordas Inferiores"  value="bottom" acceskey="" />
				</hbox>
		</radiogroup>
	</vbox>

	<button label="Close" draggable="true" id="cancel" oncommand="fl.xmlui.cancel();"/>
	
</dialog>